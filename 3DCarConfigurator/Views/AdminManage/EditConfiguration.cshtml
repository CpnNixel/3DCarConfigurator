@model _3DCarConfigurator.Models.Configuration

@{
    ViewData["Title"] = "EditConfiguration";
}

<h1>EditConfiguration</h1>

<h4>Configuration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditConfiguration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" disabled class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarId" class="control-label"></label>
                <input asp-for="CarId" class="form-control" />
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailsString" class="control-label"></label>
                <input asp-for="DetailsString" class="form-control" />
                <span asp-validation-for="DetailsString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgPath" class="control-label"></label>
                <input asp-for="ImgPath" class="form-control" />
                <span asp-validation-for="ImgPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model3dPath" class="control-label"></label>
                <input asp-for="Model3dPath" class="form-control" />
                <span asp-validation-for="Model3dPath" class="text-danger"></span>
            </div>
            @if (Model.Details != null)
            {
                @foreach (var kek in Model.Details)
                {
                    <label asp-for="@kek.Id" class="control-label"></label>
                    <input asp-for="@kek.Id" class="form-control" />
                    <span asp-validation-for="@kek.Id" class="text-danger"></span>
                }
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}