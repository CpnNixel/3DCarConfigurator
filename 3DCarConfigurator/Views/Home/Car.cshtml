@model CarConfigViewModel
@{
    ViewData["Title"] = "Car";
}
<link rel="stylesheet" href="~/css/CarPage.css" />

<div class="car">
    <img src="~/img/@Model.Car.PathToModel" width="350" height="200" /><br />
    <div class="description">
        <span class="carName">
            <b>Name:</b> @Model.Car.Name
        </span><br />
        <span class="carPrice">
            <b>Price:</b> @Model.Car.CarPrice
        </span>
    </div>
</div>

<div class="configurations">
    <div class="details">
        <div class="colors">
            <span>Color:</span>
            @foreach (var config in Model.Configs)
            {

                @foreach (var detail in config.Details.Where(x => x.Category == "Color"))
                {
                    <div style="width: 50px; height: 50px; background: @detail.Name; display: inline-block;" class=""></div>
                }

            }
        </div>
    </div>
</div>

