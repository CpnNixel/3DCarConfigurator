@model _3DCarConfigurator.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}
<h2>Изменение пароля для пользователя @Model.Email</h2>
<form asp-action="ChangePassword" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    <div class="form-group">
        <label asp-for="OldPassword" class="control-label">New password</label>
        <input type="text" asp-for="OldPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">Old password</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>
    <div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>

        <div class="form-group">
            <a asp-action="ListUsers" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>